<%- include("./partials/header") %>

<div class="row h-50 mx-auto justify-content-center align-items-center">
	<form class="form-signin" style="width: 500px;" action="/login" method="POST">
		<h1 class="h3 mb-3 font-weight-normal text-center">Log in</h1>
		<label for="inputUsername" class="sr-only">Username</label>
		<input type="text" id="inputUsername" class="form-control mb-1" name="username" placeholder="Username" required autofocus>
