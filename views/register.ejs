<%- include("./partials/header") %>

<div class="row h-50 mx-auto justify-content-center align-items-center">
	<form class="form-signin" style="width: 500px;" action="/register" method="POST" >
		<h1 class="h3 mb-3 font-weight-normal">Grab a chair by the fire.</h1>
		<!-- <label for="inputUsername" class="sr-only">Username</label> -->
		<input type="text" id="inputUsername" class="form-control mb-1" name="username" placeholder="Username" required autofocus>
		<!-- <label for="inputPassword" class="sr-only">Password</label> -->
		<input type="password" id="inputPassword" class="form-control mb-1" name="password" placeholder="Password" required>
		<!-- <label for="inputUsername" class="sr-only">First Name</label> -->
		<input type="text" class="form-control mb-1" name="firstName" placeholder="First name" required autofocus>
		<!-- <label for="inputUsername" class="sr-only">Last Name</label> -->
		<input type="text" class="form-control mb-1" name="lastName" placeholder="Last name" required autofocus>
		<!-- <label for="inputUsername" class="sr-only">Email Address</label> -->
		<input type="email" class="form-control mb-1" name="email" placeholder="Email Address" required autofocus>
		<!-- <label for="Avatar" class="sr-only">Avatar</label> -->
		<input type="text" class="form-control mb-1" name="avatar" placeholder="Avatar image url" autofocus>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
			<div class="form-signin">
				<a href="/campgrounds">Go Back</a>
			</div>
	</form>
</div>
	
